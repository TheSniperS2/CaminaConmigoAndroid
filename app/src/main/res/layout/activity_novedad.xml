<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model_mvvm.novedad.view.NovedadActivity">

    <!-- Barra superior con búsqueda y filtros -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botón de búsqueda -->
        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Buscar"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_lupa" />

        <LinearLayout
            android:id="@+id/searchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/search_bar_background"
            android:padding="8dp">

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:hint="Buscar reportes..."
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:background="@null"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Cancelar"
                android:textColor="@android:color/black"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textSize="14sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Filtros horizontales -->
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Botones de filtro -->
                <Button
                    android:id="@+id/btnFilterTendencias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#DFDFDF"
                    android:text="Tendencias"
                    android:textSize="12sp"
                    android:layout_marginEnd="10dp"
                    android:enabled="true"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btnFilterRecientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#DFDFDF"
                    android:text="Recientes"
                    android:textSize="12sp"
                    android:layout_marginEnd="10dp"
                    android:enabled="true"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btnFilterCiudad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#DFDFDF"
                    android:text="Ciudad"
                    android:textSize="12sp"
                    android:enabled="true"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- RecyclerView para mostrar las novedades -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNovedades"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <!-- Barra inferior con botones de navegación -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#EF6098"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Mapa -->
        <LinearLayout
            android:id="@+id/MapaContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_mapa"
                android:alpha="0.5"
                android:clickable="false"
                android:focusable="false"/>

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:textColor="#FFFFFF"
                android:alpha="0.5"
                android:textSize="12sp"
                android:clickable="false"
                android:focusable="false"/>
        </LinearLayout>

        <!-- Novedad -->
        <LinearLayout
            android:id="@+id/NovedadContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_novedad"
                android:clickable="false"
                android:focusable="false"/>

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novedad"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:clickable="false"
                android:focusable="false"/>
        </LinearLayout>

        <!-- Chat -->
        <LinearLayout
            android:id="@+id/ChatContainer2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/imageButton12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_chat"
                android:alpha="0.5"
                android:clickable="false"
                android:focusable="false"/>

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:alpha="0.5"
                android:clickable="false"
                android:focusable="false"/>
        </LinearLayout>

        <!-- Ayuda -->
        <LinearLayout
            android:id="@+id/AyudaContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/imageButton13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_ayuda"
                android:alpha="0.5"
                android:clickable="false"
                android:focusable="false"/>

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayuda"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:alpha="0.5"
                android:clickable="false"
                android:focusable="false"/>
        </LinearLayout>

        <!-- Menú -->
        <LinearLayout
            android:id="@+id/MenuContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/imageButton14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_menu"
                android:alpha="0.5"
                android:clickable="false"
                android:focusable="false"/>

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:alpha="0.5"
                android:clickable="false"
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>