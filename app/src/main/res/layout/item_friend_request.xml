<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <!-- Contenedor principal -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/tvRequestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitud de Amistad"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <!-- Email del usuario -->
        <TextView
            android:id="@+id/tvRequestMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensaje de solicitud de amistad"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_below="@id/tvRequestTitle"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"/>

        <!-- Botón Aceptar -->
        <ImageView
            android:id="@+id/btnAccept"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_input_add"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:contentDescription="Aceptar"
            android:layout_toStartOf="@id/btnReject"/>

        <!-- Botón Rechazar -->
        <ImageView
            android:id="@+id/btnReject"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Rechazar"
            android:padding="8dp"
            android:src="@android:drawable/ic_delete" />
    </RelativeLayout>
</LinearLayout>