<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nombre"
        android:textSize="16sp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textViewNumero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="NÃºmero"
        android:textSize="16sp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageViewEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tool"
        android:contentDescription="Editar contacto" />

    <ImageView
        android:id="@+id/imageViewPriorizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_priorizar"
        android:contentDescription="Priorizar contacto" />
</LinearLayout>
