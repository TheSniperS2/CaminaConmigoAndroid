<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:id="@+id/contactItemLayout">

        <!-- Prioridad del contacto -->
        <TextView
            android:id="@+id/textViewPrioridad"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <!-- Contenedor para nombre y número -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp">

            <!-- Nombre del contacto -->
            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="16sp"
                android:textColor="@color/colorText"
                android:layout_marginEnd="8dp" />

            <!-- Número de teléfono con color gris o con opacidad -->
            <TextView
                android:id="@+id/textViewNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewEditar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="Editar contacto"
            android:src="@drawable/edit_24px"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/imageViewMover"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dehaze_24px"
            android:layout_marginEnd="0dp" />
    </LinearLayout>

    <!-- Línea divisoria -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />
</LinearLayout>