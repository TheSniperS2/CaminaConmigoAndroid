<resources>
    <!-- Tema personalizado para BottomSheetDialogFragment en modo oscuro -->
    <style name="RoundedBottomSheetTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <!-- Fondo del dialogo -->
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <!-- Estilo para el fondo del BottomSheet -->
    <style name="RoundedBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/RoundedCorners</item>
        <item name="android:background">@color/colorBackground</item> <!-- Fondo oscuro dinámico -->
    </style>

    <!-- Bordes redondeados -->
    <style name="RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Mantén el mismo radio de bordes -->
    </style>
</resources>